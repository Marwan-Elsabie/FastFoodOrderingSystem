@model PaginatedList<Product>
@{
    ViewData["Title"] = "Menu";
    var categories = ViewBag.Categories as List<string> ?? new List<string>();
    var searchTerm = ViewBag.SearchTerm as string;
    var selectedCategory = ViewBag.Category as string;
}

<h2>Our Menu</h2>

<!-- Search and Filter Section -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Menu" method="get" class="row g-3">
            <input type="hidden" name="pageIndex" value="1" />
            <div class="col-md-5">
                <input type="text" name="searchTerm" class="form-control" placeholder="Search products..." value="@searchTerm">
            </div>
            <div class="col-md-4">
                <select name="category" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var category in categories)
                    {
                        <option value="@category" selected="@(category == selectedCategory)">@category</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">Search</button>
                @if (!string.IsNullOrEmpty(searchTerm) || !string.IsNullOrEmpty(selectedCategory))
                {
                    <a asp-action="Menu" class="btn btn-secondary w-100 mt-2">Clear Filters</a>
                }
            </div>
        </form>
    </div>
</div>

@* Top selling recommendations shown under the filter (calls the shared partial) *@
@{
    var topSelling = ViewBag.TopSelling as List<Product> ?? new List<Product>();
}
@if (topSelling.Any())
{
    <div class="mb-4">
        <h5>Top selling</h5>
        @await Html.PartialAsync("~/Views/Shared/_RecommendedProducts.cshtml", topSelling)
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        No products found. Try a different search term or category.
    </div>
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text"><strong>$@product.Price.ToString("0.00")</strong></p>
                    <p class="card-text"><small class="text-muted">@product.Category</small></p>
                </div>
                <div class="card-footer">
                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fas fa-cart-plus"></i> Add to Cart
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                <a class="page-link" asp-action="Menu"
                   asp-route-pageIndex="@(Model.PageIndex - 1)"
                   asp-route-searchTerm="@searchTerm"
                   asp-route-category="@selectedCategory">Previous</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Menu"
                       asp-route-pageIndex="@i"
                       asp-route-searchTerm="@searchTerm"
                       asp-route-category="@selectedCategory">@i</a>
                </li>
            }

            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                <a class="page-link" asp-action="Menu"
                   asp-route-pageIndex="@(Model.PageIndex + 1)"
                   asp-route-searchTerm="@searchTerm"
                   asp-route-category="@selectedCategory">Next</a>
            </li>
        </ul>
    </nav>
}