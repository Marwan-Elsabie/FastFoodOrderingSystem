@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-4">
    <h1 class="display-4">Welcome to Fast Food Express</h1>
    <p class="lead">Delicious food delivered to your doorstep!</p>
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text"><strong>$@product.Price.ToString("0.00")</strong></p>
                </div>
                <div class="card-footer">
                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fas fa-cart-plus"></i> Add to Cart
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<div class="text-center mt-4">
    <a asp-controller="Home" asp-action="Menu" class="btn btn-success btn-lg">
        View Full Menu <i class="fas fa-arrow-right"></i>
    </a>
</div>