@{
    ViewData["Title"] = "About Us";
}

<h2>About Fast Food Express</h2>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Our Story</h5>
                <p class="card-text">
                    Founded in 2024, Fast Food Express started with a simple mission:
                    to deliver delicious, high-quality fast food quickly and conveniently
                    to our customers' doorsteps.
                </p>
                <p class="card-text">
                    We believe that everyone deserves a great meal without the hassle of
                    cooking or going out. That's why we've partnered with the best local
                    chefs to bring you a menu that's both delicious and affordable.
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Our Values</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success"></i> Quality Ingredients
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success"></i> Fast Delivery
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success"></i> Customer Satisfaction
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success"></i> Affordable Prices
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success"></i> Hygiene & Safety
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5>Our Team</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=150" class="rounded-circle mb-2" alt="Team Member">
                        <h6>John Smith</h6>
                        <p class="text-muted">Founder & CEO</p>
                    </div>
                    <div class="col-md-3">
                        <img src="https://images.unsplash.com/photo-1494790108755-2616b786d4d1?w=150" class="rounded-circle mb-2" alt="Team Member">
                        <h6>Sarah Johnson</h6>
                        <p class="text-muted">Head Chef</p>
                    </div>
                    <div class="col-md-3">
                        <img src="https://images.unsplash.com/photo-1500648767791-00dcc994a43e?w=150" class="rounded-circle mb-2" alt="Team Member">
                        <h6>Mike Wilson</h6>
                        <p class="text-muted">Delivery Manager</p>
                    </div>
                    <div class="col-md-3">
                        <img src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=150" class="rounded-circle mb-2" alt="Team Member">
                        <h6>Lisa Brown</h6>
                        <p class="text-muted">Customer Support</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>