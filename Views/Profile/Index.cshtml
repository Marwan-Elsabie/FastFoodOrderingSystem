@model ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<h2>My Profile</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Profile Information</h5>
            </div>
            <div class="card-body">
                <form asp-action="UpdateProfile" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" readonly />
                        <small class="text-muted">Email cannot be changed</small>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Update Profile</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <a asp-controller="Cart" asp-action="OrderHistory" class="list-group-item list-group-item-action">
                        <i class="fas fa-history"></i> View Order History
                    </a>
                    <a asp-controller="Cart" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fas fa-shopping-cart"></i> View Shopping Cart
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Admin" asp-action="Dashboard" class="list-group-item list-group-item-action">
                            <i class="fas fa-tachometer-alt"></i> Admin Dashboard
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>