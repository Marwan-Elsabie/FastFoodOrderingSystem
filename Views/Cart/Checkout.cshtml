@using System.Security.Claims
@model FastFoodOrderingSystem.Models.PlaceOrderViewModel
@{
    ViewData["Title"] = "Checkout";
    var cart = ViewBag.Cart as List<FastFoodOrderingSystem.Models.ShoppingCartItem> ?? new List<FastFoodOrderingSystem.Models.ShoppingCartItem>();
    var total = (decimal)(ViewBag.Total ?? 0m);
}

<div class="container my-4">
    <h2>Checkout</h2>

    <div class="row">
        <div class="col-md-7">
            <div class="card mb-3">
                <div class="card-body">
                    <form asp-action="PlaceOrder" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <h5 class="mb-3">Delivery information</h5>

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="CustomerName" class="form-label"></label>
                            <input asp-for="CustomerName" class="form-control" />
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DeliveryAddress" class="form-label"></label>
                            <textarea asp-for="DeliveryAddress" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PaymentMethod" class="form-label">Payment method</label>
                            <div>
                                <div class="form-check form-check-inline">
                                    <input asp-for="PaymentMethod" class="form-check-input" type="radio" value="CashOnDelivery" checked />
                                    <label class="form-check-label">Cash on delivery</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input asp-for="PaymentMethod" class="form-check-input" type="radio" value="Card" />
                                    <label class="form-check-label">Card (Stripe test)</label>
                                </div>
                            </div>
                            <small class="text-muted d-block mt-1">To test card payments use Stripe test card <code>4242 4242 4242 4242</code> with any future expiry and CVC.</small>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-secondary">Back to cart</a>
                            <button id="place-order-btn" type="submit" class="btn btn-success">@($"Place order - ${total:0.00}")</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <h5>Order summary</h5>
                    @if (!cart.Any())
                    {
                        <p class="text-muted">Your cart is empty.</p>
                    }
                    else
                    {
                        <ul class="list-group mb-2">
                            @foreach (var item in cart)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <img src="@item.Product.ImageUrl" alt="@item.Product.Name" style="width:64px;height:64px;object-fit:cover;border-radius:6px;margin-right:12px;" />
                                        <div>
                                            <strong>@item.Product.Name</strong>
                                            <div class="text-muted small">@($"{item.Quantity} x ${item.Product.Price:0.00}")</div>
                                        </div>
                                    </div>
                                    <div>
                                        <strong>@($"${(item.Product.Price * item.Quantity):0.00}")</strong>
                                    </div>
                                </li>
                            }
                        </ul>

                        <div class="d-flex justify-content-between">
                            <div><strong>Subtotal</strong></div>
                            <div><strong>@($"${total:0.00}")</strong></div>
                        </div>

                        <div class="text-muted small mt-2">
                            Taxes and delivery fees may be added later.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Prevent double submit and show a spinner
        $('#place-order-btn').on('click', function () {
            var $btn = $(this);
            $btn.prop('disabled', true).text('Processing...');
            $btn.closest('form').submit();
        });
    </script>
}

