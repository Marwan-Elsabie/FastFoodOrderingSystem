@using FastFoodOrderingSystem.Helpers
@using FastFoodOrderingSystem.Models
@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fast Food Ordering System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FastFoodOrderingSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Fast Food Express</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Menu">Menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            @await Html.PartialAsync("_CartBadge")
                        </div>

                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <div class="dropdown">
                                <a class="btn btn-outline-secondary dropdown-toggle" href="#" role="button" id="userMenu"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user"></i> @User.Identity.Name
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                    <li><a class="dropdown-item" asp-controller="Cart" asp-action="OrderHistory">Order History</a></li>
                                    <!-- Fixed: point to Identity Manage Razor Page -->
                                    <li>
                                        <a asp-controller="Profile"
                                           asp-action="Index"
                                           class="nav-link">
                                            Profile
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><hr class="dropdown-divider" /></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a></li>
                                    }
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-area="Identity"
                                              asp-page="/Account/Logout"
                                              method="post"
                                              class="d-inline">
                                            <button type="submit" class="btn btn-link nav-link">
                                                Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex">
                                <a class="btn btn-outline-primary me-2" href="~/Identity/Account/Login">Login</a>
                                <a class="btn btn-primary" href="~/Identity/Account/Register">Register</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h6>Fast Food Express</h6>
                    <p>Delicious food delivered fast to your doorstep.</p>
                    <div class="social-icons">
                        <a href="#" class="text-muted me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-muted me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-muted me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-muted"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="col-md-4">
                    <h6>Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Menu" class="text-muted">Menu</a></li>
                        <li><a asp-controller="Home" asp-action="About" class="text-muted">About Us</a></li>
                        <li><a asp-controller="Home" asp-action="Contact" class="text-muted">Contact</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-muted">Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6>Contact Info</h6>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-map-marker-alt me-2"></i>123 Food Street, Fast Food City</li>
                        <li><i class="fas fa-phone me-2"></i>1-800-FAST-FOOD</li>
                        <li><i class="fas fa-envelope me-2"></i>support@fastfood.com</li>
                    </ul>
                </div>
            </div>
            <hr class="mt-3" />
            <div class="text-center">
                &copy; 2024 - Fast Food Ordering System -
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Toastr configuration and display TempData messages
        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-top-right",
            "timeOut": "5000"
        };

        (function () {
            var success = '@(TempData["SuccessMessage"] ?? "")';
            var error = '@(TempData["ErrorMessage"] ?? "")';
            if (success) {
                toastr.success(success);
            }
            if (error) {
                toastr.error(error);
            }
        })();
    </script>
</body>
</html>